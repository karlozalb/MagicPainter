<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_paint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="magicpainterkids.projectclean.com.magicpainterforkids.MainActivity">

    <com.projectclean.magicpainterforkids.customviews.BackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background_imagev" />

    <com.projectclean.magicpainterforkids.customviews.FingerPaintView
        android:id="@+id/finger_paint_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff" />

    <LinearLayout
        android:id="@+id/pencils_parent_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:src="@drawable/pencil_black"
            android:layout_width="29dp"
            android:layout_height="113dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:adjustViewBounds="false"
            android:clickable="true"
            android:layout_marginRight="5dp" />
        <ImageView
            android:src="@drawable/pencil_green"
            android:layout_width="29dp"
            android:layout_height="113dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp" />
        <ImageView
            android:src="@drawable/pencil_red"
            android:layout_width="29dp"
            android:layout_height="113dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp" />
        <ImageView
            android:src="@drawable/pencil_light_blue"
            android:layout_width="29dp"
            android:layout_height="113dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp" />
        <ImageView
            android:src="@drawable/pencil_yellow"
            android:layout_width="29dp"
            android:layout_height="113dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp" />
        <ImageView
            android:src="@drawable/pencil_violet"
            android:layout_width="29dp"
            android:layout_height="113dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp" />
        <ImageView
            android:src="@drawable/pencil_brown"
            android:layout_width="29dp"
            android:layout_height="113dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp" />
        <ImageView
            android:src="@drawable/pencil_pink"
            android:layout_width="29dp"
            android:layout_height="113dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp" />
        <ImageView
            android:src="@drawable/pencil_orange"
            android:layout_width="29dp"
            android:layout_height="113dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:src="@drawable/pencil_eraser"
            android:layout_width="29dp"
            android:layout_height="113dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom" />

        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|bottom">

            <ImageView
                android:src="@drawable/pencil_size"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical" />

            <SeekBar
                android:id="@+id/pencil_size_seekbar"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:splitTrack="false"
                android:layout_gravity="center_vertical"
                android:progressDrawable="@drawable/apptheme_scrubber_progress_horizontal_holo_dark"
                android:thumb="@drawable/apptheme_scrubber_control_normal_holo"/>

            <ImageView
                android:src="@drawable/pencil_size"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <ImageButton
            android:id="@+id/undo_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/undo_arrow"
            android:scaleType="fitXY"
            android:background="#00ffffff" />

        <ImageButton
            android:id="@+id/redo_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/redo_arrow"
            android:scaleType="fitXY"
            android:background="#00ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp">



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/share_button"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_marginRight="15dp"
            android:background="#00ffffff"
            android:layout_alignParentTop="true" />

            <ImageButton
                android:id="@+id/pencil_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/pencil_button"
                android:scaleType="fitXY"
                android:background="#00ffffff"
                android:layout_marginRight="15dp" />

            <ImageButton
                android:id="@+id/photo_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/camera_button"
                android:scaleType="fitXY"
                android:background="#00ffffff"
                android:layout_marginRight="15dp" />

            <ImageButton
                android:id="@+id/save_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/save_button"
                android:scaleType="fitXY"
                android:background="#00ffffff"
                android:layout_marginRight="15dp" />

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/delete_button"
                android:scaleType="fitXY"
                android:background="#00ffffff"
                android:layout_marginRight="15dp" />

        <!--<ImageButton
            android:id="@+id/paint_bucket_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/paint_bucket"
            android:scaleType="fitXY"
            android:background="#00ffffff" />-->

    </LinearLayout>


</RelativeLayout>
